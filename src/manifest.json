{
  "manifest_version": 3,
  "name": "Password Toggle",
  "version": "1.0",
  "description": "Toggle password visibility on all websites",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Password Visibility",
    "default_popup": "./index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
